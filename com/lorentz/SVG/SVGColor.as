                public static function parseToInt(s:String):uint {
                        if(s==null)
                                return 0x000000;
                                
                        s = StringUtil.trim(s);
                        
                        if(s=="none" || s==""){
                                return 0x000000;
                        } else if(s.charAt(0)=="#") {
                                s = s.substring(1);
                                if(s.length<6)
                                        s = s.charAt(0)+s.charAt(0)+s.charAt(1)+s.charAt(1)+s.charAt(2)+s.charAt(2);
                                return new uint("0x" + s);
                        } else if(s.indexOf("(")>-1){
                                s = StringUtil.rtrim(s,")");
                                s = s.split("(")[1];
                                var args:Array = SVGParser.parseArgsData(s);
                                return uint(args[0])*256*256 + Number(args[1])*256 + Number(args[2]);
                        } else {
                                return parseToInt(getColorByName(s));
                        }
                }
                
                //Used in another project, can be deleted.
                public static function flashToSVG(color:uint):String{
                        var colorText:String = color.toString(16);
                        while (colorText.length < 6) {
                                colorText = "0" + colorText;
                        }
                        return "#"+colorText;
